.section {
  background-color: #fff;
  height: 100rpx;
  line-height: 100rpx;
  position: relative;
  border-bottom: 1rpx solid #f2f2f2;
}

/* 左图标 */

.section image {
  width: 40rpx;
  height: 40rpx;
  vertical-align: text-bottom;
  margin: 0 10rpx 0 20rpx;
}

.section input {
  height: 100%;
  color: #808080;
}
.xingming input,
.dianhua input {
  position: absolute;
  top: 0;
  left: 23%;
}
.dianhua input {
  left: 32%;
}
