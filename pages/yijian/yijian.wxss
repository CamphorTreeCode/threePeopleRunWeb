page{
  background-color: #fff;
}
.top {
  padding: 20px 0;
  background-color: #fff;
  border-bottom: 20rpx solid #f2f2f2;
}
.top image {
  width: 50rpx;
  height: 50rpx;
  float: left;
  margin: 0 15rpx 0 25rpx;
}
.main {
  height: 800rpx;
  padding: 20rpx;
}
.main textarea {
  width: 100%;
  height: 100%;
}
button {
  width: 94%;
  color: #fff;
  background-color: #33A1FF;
  position: fixed;
  bottom: 5%;
  left: 3%;
}
.tan {
  height: 350rpx;
  width: 500rpx;
  border: 1rpx solid #fff;
  border-radius: 15rpx;
  display: none;
  text-align: center;
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  -webkit-box-shadow:0 0 15px #ccc;  
  -moz-box-shadow:0 0 15px #ccc;  
  box-shadow:0 0 15px #bbb;
}
.tan image {
  width: 200rpx;
  height: 200rpx;
  margin-top: 15rpx;
}
.tan .yitijiao {
  padding: 10rpx 0;
  font-size: 40rpx;
}
.tan .ganxie {
  color: #ccc;
  font-size: 30rpx;
}
.kuang {
  display: block;
}