/* 底部分类 */

.foter {
  position: relative;
  /* fixed */
}

.waw {
  width: 100%;
  position: fixed;
  top: 0;
  z-index: 10;
  background: rgba(0, 0, 0, 0.5);
}

.dingwei {
  font-size: 30rpx;
  width: 100%;
  position: absolute;
  /* height: 560rpx;  */
  padding-bottom: 20rpx;
  top: 93rpx;
  left: 0;
  z-index: 10;
  color: #999;
  overflow: hidden;
  padding-top: 17rpx;
}

.dingwei button {
  width: 200rpx;
  position: absolute;
  bottom: 40rpx;
  left: 50%;
  background: #33a1ff;
  color: white;
  font-size: 34rpx;
  margin-left: -100rpx;
  border-top-left-radius: 70rpx;
  border-top-right-radius: 70rpx;
  border-bottom-left-radius: 70rpx;
  border-bottom-right-radius: 70rpx;
  border: 0;
}

.active {
  /* padding-top: 10rpx;  */
  background: white;
  /* box-shadow:5px 5px 10px #ccc; */
  border-bottom-left-radius: 90rpx;
  border-bottom-right-radius: 90rpx;
  font-size:34rpx;
}

.active .xingbie, .active .gongzi, .active .gongz {
  padding-left: 30rpx;
}

.active .gongzi {
  margin-bottom: 20rpx;
}

