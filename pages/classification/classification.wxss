  border-radius: 10rpx;
  padding-left: 4%;
}

.foter .top-head view:nth-of-type(1), .foter .top-head view:nth-of-type(4) {
  width: 13.6%;
}

.foter .top-head view:nth-of-type(2), .foter .top-head view:nth-of-type(3) {
  width: 20%;
}

.activeshow {
  color: #33a1fe;
  border: 1rpx solid #33a1fe;
}

.foter .top-head image {
  position: absolute;
  top: 50%;
  margin-top: -11rpx;
  left: 8%;
  width: 30rpx;
  height: 30rpx;
}

