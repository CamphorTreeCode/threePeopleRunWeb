  color: #33a1ff;
}

.foter .top-head {
  width: 94%;
  padding: 20rpx 3%;
  color: #999;
  background: white;
  z-index: 10;
  /* position: relative;  */
  top: 0;
}

.foter .top-head view {
  display: inline-block;
  position: relative;
  width: 17%;
  margin: 0 2%;
