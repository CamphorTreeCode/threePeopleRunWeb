/* pages/classification/classification.wxss */

.header {
  padding: 30rpx;
  border-top: 1rpx solid #f2f2f2;
  border-bottom: 1rpx solid #f2f2f2;
}
.zhiding{
  background: url("https://www.chuanshoucs.com/ServerImg/2018-07-17/fa0b00a4-a740-4d71-b1d9-a1bd65d40a1e.png") no-repeat top;
  background-position-x: 95%;
  background-size: 20%;
}
.header input {
  display: inline-block;
  font-size: 32rpx;
  width: 399rpx;
  /* width: 65%;  */
  padding: 10rpx 40rpx;
  border-radius: 60rpx;
  border: 1rpx solid #c2c2c2;
  color: #999;
}

.header button {
  display: inline-block;
  width: 25%;
  font-size: 30rpx;
  border-radius: 60rpx;
